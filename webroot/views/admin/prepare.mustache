{{>../header}}
<script>
$(function(){
if(window.location.href.indexOf("edit") >= 0){
$.getJSON("/admin/prepare/api/{{title}}", function(data){
$("#storytitle").val(data.title);
$("#storytitle").attr("readonly", "true");
$("#addTag").val(data.category_name);
$("#storybody").val(data.body);

if(data.istopped == 1){
$("#topRadio1").attr("checked", "true");
}else{
$("#topRadio2").attr("checked", "true");
}
if(data.iscomment == 1){
$("#commentRadio1").attr("checked", "true");
}else{
$("#commentRadio2").attr("checked", "true");
}
});
}
$(".fileinput-upload").click(function(){

});
});

</script>

<ul class="nav nav-tabs">
<li role="presentation" class="active"><a href="/admin/prepare">编写日志</a></li>
<li role="presentation"><a href="/admin/storymanage">管理日志</a></li>
<li role="presentation"><a href="/admin/tagmanage">管理分类</a></li>
<li role="presentation"><a href="/admin/attachmanage">管理附件</a></li>
</ul>
<br>
<form id = "prepare" method = "POST" action = "/admin/prepare">
<div class="form-group">
<label for="title">添加标题</label>
<input type = "text" class="form-control" name = "title" placeholder="请输入标题" id = "storytitle" />
</div>
<div class="form-group">
<div class="row">
<div class="col-lg-6">
<label for="title">添加分类</label>
</div>
<div class="col-lg-3">
<label for="title">是否置顶</label>
</div>
<div class="col-lg-3">
<label for="title">能否评论</label>
</div>
</div>
<div class="row">
<div class="col-lg-6">
<div class="input-group">
<div class="input-group-btn">
<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">选择分类 <span class="caret"></span></button>
<ul class="dropdown-menu">
{{#tags}}
<li><a = "#">{{name}}</a></li>
{{/tags}}
</ul>
</div>
<input id = "addTag" type="text" class="form-control" aria-label="..." placeholder="可直接输入新增分类" name="tag"/>
</div>
</div>
<div class="col-lg-3">
<label class="radio-inline">
<input type="radio" name="istopped" id="topRadio1" value="1"> 是
</label>
<label class="radio-inline">
<input type="radio" name="istopped" id="topRadio2" value="0" checked> 否
</label>
</div>
<div class="col-lg-3">
<label class="radio-inline">
<input type="radio" name="iscomment" id="commentRadio1" value="1"> 是
</label>
<label class="radio-inline">
<input type="radio" name="iscomment" id="commentRadio2" value="0" checked> 否
</label>
</div>
</div>
</div>
<div class="form-group">
<label for="body">添加正文</label>
<textarea class="form-control" name = "body" rows="30" placeholder="请输入正文" id = "storybody"></textarea>
</div>
<button type = "submit" class="btn btn-primary">提交</button>
<hr>
<div id = "attachdata">

</div>
</form>
<form id="uploadfile" method="post" enctype="multipart/form-data">
<label for="attach">上传附件</label>
<input id="inputbutton" name="inputimage" type = "file" class="file" multiple>
</form>

{{>../footer}}
